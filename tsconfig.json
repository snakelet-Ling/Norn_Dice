{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
    "resolveJsonModule": true,
    "types": [
      "node",
      "yml-register/types"
    ]
  },
  "include": [
    "src",
    "src/**/*.json"
  ],
  "paths": {
    "@snakelet/koishi-plugin-norn-dice/*": ["src/*"]
  }
}
